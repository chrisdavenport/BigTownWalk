<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="text"
			class="readonly"
			label="COM_BIGTOWNWALK_FIELD_ID_LABEL"
			description ="COM_BIGTOWNWALK_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			/>

		<field
			name="created"
			type="calendar"
			class="readonly"
			label="COM_BIGTOWNWALK_FIELD_CREATED_LABEL"
			description ="COM_BIGTOWNWALK_FIELD_CREATED_DESC"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			/>

		<field
			name="modified"
			type="calendar"
			class="readonly"
			label="COM_BIGTOWNWALK_FIELD_MODIFIED_LABEL"
			description ="COM_BIGTOWNWALK_FIELD_MODIFIED_DESC"
			readonly="true"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
			/>

		<field
			name="title"
			type="text"
			label="COM_BIGTOWNWALK_FIELD_TITLE_LABEL"
			description="COM_BIGTOWNWALK_FIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="40"
			required="true"
			/>

		<field
			name="alias"
			type="text"
			label="COM_BIGTOWNWALK_FIELD_ALIAS_LABEL"
			description="COM_BIGTOWNWALK_FIELD_ALIAS_DESC"
			size="40"
			filter="cmd"
			/>

		<field
			name="description"
			type="editor"
			label="COM_BIGTOWNWALK_FIELD_DESCRIPTION_LABEL"
			description="COM_BIGTOWNWALK_FIELD_DESCRIPTION_DESC"
			/>

		<field
			name="state"
			type="list"
			label="COM_BIGTOWNWALK_FIELD_STATUS_LABEL"
			description="COM_BIGTOWNWALK_FIELD_STATUS_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="0"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="publish_up"
			type="calendar"
			label="COM_BIGTOWNWALK_FIELD_PUBLISH_UP_LABEL"
			description="COM_BIGTOWNWALK_FIELD_PUBLISH_UP_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
			/>

		<field
			name="publish_down"
			type="calendar"
			label="COM_BIGTOWNWALK_FIELD_PUBLISH_DOWN_LABEL"
			description="COM_BIGTOWNWALK_FIELD_PUBLISH_DOWN_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
			/>

		<field
			name="access"
			type="accesslevel"
			label="COM_BIGTOWNWALK_FIELD_ACCESS_LABEL"
			description="COM_BIGTOWNWALK_FIELD_ACCESS_DESC"
			id="access"
			class="inputbox"
			size="1"
			/>
	</fieldset>
</form>
